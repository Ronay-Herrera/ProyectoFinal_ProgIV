<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>ControladorProducto</servlet-name>
        <servlet-class>controlador.ControladorProducto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorProducto</servlet-name>
        <url-pattern>/productos</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ControladorUsuario</servlet-name>
        <servlet-class>controlador.ControladorUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorUsuario</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ControladorCarrito</servlet-name>
        <servlet-class>controlador.ControladorCarrito</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorCarrito</servlet-name>
        <url-pattern>/carrito</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CompraExitosa</servlet-name>
        <servlet-class>controlador.ControladorCompraExitosa</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompraExitosa</servlet-name>
        <url-pattern>/compraExitosa</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
